# Basic binds
super + Return
    $TERMINAL
super + d
    rofi -show combi
super + shift + d
    rofi-pass
super + m
    $TERMINAL -e ncmpcpp
super + t
    $TERMINAL
super + {_,shift +} p
    maim {-s, } $HOME/$(date +%Y-%m-%d_%H:%M:%S).png
super + shift + w
    $BROWSER
super + shift + g
    gimp
super + shift + v
    $TERMINAL -e pulsemixer
super + o ; {t,e,w,m,f}
    {$TERMINAL,$TERMINAL -e $EDITOR,qutebrowser,$TERMINAL -e $MAIL,$TERMINAL -e $FILE}

XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioMute
    pactl set-sink-mute $(pactl list short sinks | grep RUNNING | cut -f1) toggle # mute sound
XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume $(pactl list short sinks | grep RUNNING | cut -f1) {-,+}5% # decrease sound volume
XF86ScreenSaver
    xscreensaver-command -activate
Print
    maim -s $HOME/$(date +%Y-%m-%d_%H:%M:%S).png
shift + Print
    maim $HOME/$(date +%Y-%m-%d_%H:%M:%S).png
